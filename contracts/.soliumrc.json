{
  "extends": "solium:recommended",
  "plugins": [
    "security"
  ],
  "rules": {
    "quotes": [
      "error",
      "double"
    ],
    "indentation": [
      "error",
      4
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "max-len": [ "error", 82 ],
    "security/no-inline-assembly": 0,
    "security/no-call-value": 0,
    "operator-whitespace": 0
  }
}
